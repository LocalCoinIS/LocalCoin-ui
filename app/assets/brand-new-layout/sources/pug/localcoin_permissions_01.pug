doctype html
html(lang="ru-RU")
	include includes/head
	body.localcoin
		include includes/header
		main.main
			include includes/sidebar
			.content
				h2.content__heading Permissions
				.dashboard
					.dashboard__tabs.permissions
						.select.dashboard__mobileselect
							span.placeholder Active Permissions
							ul
								li(data-value='1') Owner Permissions
								li(data-value='2') Memo key
								li(data-value='3') Switch to account model
							input(type='hidden', name='changeme')
						.dashboard__tabs__item
							h4 Active Permissions
						.dashboard__tabs__item
							h4 Owner Permissions
						.dashboard__tabs__item.active
							h4 Memo key
						.dashboard__tabs__item
							h4 Switch to account model
				.negative-margins
					.container-fluid
						.row
							.col-xl-7
								p Active permissions define the accounts that have permission to spend funds for this account.
								p They can be used to easily setup a multi-signature scheme, see 
									a(href="#") permissions 
									| for more details.
						.threshold-block
							span Threshold  
							input(type="text")
						label.label Enter account name/key and weight
						.account-inputs
							input(type="text" placeholder="Account name or key")
							input(type="text" placeholder="Weight")
							button(type="button" disabled).btn.large.inverted Add
						.accounts-table-wrap.accounts-table-wrap__keys
							table.accounts-table
								tr
									th
									th Account / Key / Address
									th Weight
									th Action
								tr
									td: span.key-icon
									td: a(href="#") BTS76G3KpnGSGeepBGDc6TehTiKLkQCWpaUpkrcTa5GWBJP4vG1Kz
									td 1
									td.right: button(type="button").btn.large.outline Remove
						.account-actions
							button(type="button").btn.large.inverted Publish changes
							button(type="button").btn.large.outline Reset changes
						h2.content__heading Recent activity
						.active-table-wrap
									table.active-table
										tr
											th Operation id
											th Info
										tr
											td No recent transactions
											td

		include includes/footer
		//- Подключение скриптов
		include includes/scripts